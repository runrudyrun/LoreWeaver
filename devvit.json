{
  "name": "loreweave",
  "description": "Branching microfiction with daily constraints",
  "entryPoints": {
    "webview": "src/webview/index.tsx",
    "server": "src/server/index.ts"
  },
  "permissions": {
    "redis": true,
    "realtime": true,
    "http": { "enable": false }
  },
  "triggers": {
    "schedules": [
      {
        "id": "canonizeDaily",
        "cron": "50 23 * * *",
        "timezone": "America/Sao_Paulo",
        "function": "canonizeAndPost"
      }
    ]
  }
}